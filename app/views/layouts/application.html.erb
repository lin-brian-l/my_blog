<!DOCTYPE html>
<html>
  <head>
    <title>MyBlog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <% if !logged_in? %>
      <span><a href="/users/new">Register</a> | <a href="/sessions/new">Login</a> | <a href="/entries">Home</a></span>
      <% else %>
      <span><a href="/users/<%= current_user.id %>"><%= current_user.username %></a> | <form action="/sessions" method="post"><input type="hidden" name="_method" value="delete"><input type="submit" value="Logout"></form>| <a href="/entries">Home</a></span>
      <% end %>
    </nav>
    <%= yield %>
  </body>
</html>
